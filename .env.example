# Application Settings
APP_NAME="Human Lens API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="production"
HOST="0.0.0.0"
PORT=8000

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM="HS256"

# Database
DATABASE_URL="sqlite:///./data/human_lens.db"

# CORS Settings
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
ALLOWED_HEADERS="*"

# Email Settings (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@kookooha.com"
FROM_NAME="Kookooha Team"

# Stripe Settings
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# OpenAI Settings
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Pricing Configuration
BASE_PRICE_CENTS=75000  # €750.00
PRICE_PER_ADDITIONAL_PERSON_CENTS=7500  # €75.00
PRICE_PER_ADDITIONAL_CRITERIA_CENTS=15000  # €150.00
BASE_TEAM_SIZE=4
BASE_CRITERIA_COUNT=2

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS="csv,xlsx,json"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# Frontend URLs (for email templates)
FRONTEND_URL="https://kookooha.com"
SURVEY_URL_TEMPLATE="https://kookooha.com/survey/{token}"

# Survey Settings
SURVEY_TOKEN_EXPIRE_DAYS=30
MAX_TEAM_SIZE=1000
MAX_CRITERIA_COUNT=50

# Scheduler Settings
SCHEDULER_TIMEZONE="Europe/Berlin"